<Window x:Class="ais.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ais"
        mc:Ignorable="d"
        Title="Akademinė Informacinė Sistema" Height="720" Width="1080" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Border>
        <Border.Background>
            <ImageBrush ImageSource="Assets/background.jpg" />
        </Border.Background>
        <StackPanel>
            <StackPanel Margin="180 270 180 0" Width="310">
                <Label Content="Prisijungimo vardas:" Width="245"></Label>
                <TextBox x:Name="UsernameTextBox" Width="245" Margin="0 5 0 0"  />
                <Label Content="Slaptažodis:" Width="245"></Label>
                <PasswordBox x:Name="PasswordBox" Width="245" Margin="0 5 0 0" />
                <Button Content="Prisijungti" Click="LoginButton_Click" Width="154" Margin="0 10 0 0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
